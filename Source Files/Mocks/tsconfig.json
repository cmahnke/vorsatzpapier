{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "typeRoots": ["./node_modules/@types"],
    "target": "es2017",
    "skipLibCheck": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["patterns/assets/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
