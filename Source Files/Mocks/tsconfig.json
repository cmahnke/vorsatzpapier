{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "target": "es2020",
    "skipLibCheck": true,
    "lib": ["dom", "es2020"],
    "typeRoots": ["./patterns/assets/ts/types", "./node_modules/@types"]
  },
  "include": ["patterns/assets/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
